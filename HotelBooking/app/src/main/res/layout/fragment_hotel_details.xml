<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClientSide.HotelDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="88dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:adjustViewBounds="false"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/hotel1"
                    app:layout_constraintBottom_toTopOf="@+id/guideline2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_Hotelname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:text="Al_Qasem Hotel"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imgview" />

                <TextView
                    android:id="@+id/tv_location4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:drawableLeft="@drawable/location"
                    android:text="Beit Lahia"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Hotelname4" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="40dp"
                    android:text="The chalet was opened in 2019 and includes many facilities and supplies for your comfort, including a children's pool with a depth of half a meter, as well as for adults, with a depth ranging from 1 to 4 meters, and much much more waiting for you"
                    app:layout_constraintStart_toStartOf="@+id/tv_Hotelname4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_location4"
                    android:typeface="serif"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="150dp"
                    android:text="Price"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_location4" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/mony"
                    app:layout_constraintEnd_toEndOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="80dp"
                    android:text="Animities"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <ImageButton
                    android:id="@+id/img_btn_bar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView7"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:src="@drawable/bar"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Bar"
                    app:layout_constraintEnd_toEndOf="@+id/img_btn_bar2"
                    app:layout_constraintStart_toStartOf="@+id/img_btn_bar2"
                    app:layout_constraintTop_toBottomOf="@+id/img_btn_bar2" />


                <ImageButton
                    android:id="@+id/img_btn_park2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_bar2"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_bar2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_bar2"
                    android:src="@drawable/park"/>

                <ImageButton
                    android:id="@+id/img_btn_wifi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_park2"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_park2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_park2"
                    android:src="@drawable/wifi"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Parking"
                    app:layout_constraintEnd_toEndOf="@+id/img_btn_park2"
                    app:layout_constraintStart_toStartOf="@+id/img_btn_park2"
                    app:layout_constraintTop_toBottomOf="@+id/img_btn_park2" />

                <ImageButton
                    android:id="@+id/img_btn_gym2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_wifi2"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_wifi2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_wifi2"
                    android:src="@drawable/fitness"/>

                <ImageButton
                    android:id="@+id/img_btn_swim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_gym2"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_gym2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_gym2"
                    android:src="@drawable/swimmingpool"/>
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="WIFI"
                    app:layout_constraintEnd_toEndOf="@+id/img_btn_wifi2"
                    app:layout_constraintStart_toStartOf="@+id/img_btn_wifi2"
                    app:layout_constraintTop_toBottomOf="@+id/img_btn_wifi2" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gym"
                    app:layout_constraintEnd_toEndOf="@+id/img_btn_gym2"
                    app:layout_constraintStart_toStartOf="@+id/img_btn_gym2"
                    app:layout_constraintTop_toBottomOf="@+id/img_btn_gym2" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="SwimPool"
                    app:layout_constraintEnd_toEndOf="@+id/img_btn_swim2"
                    app:layout_constraintStart_toStartOf="@+id/img_btn_swim2"
                    app:layout_constraintTop_toBottomOf="@+id/img_btn_swim2" />

                <Button
                    android:id="@+id/btn_reserve2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserve Now"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_like2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_like2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_like2" />

                <ImageButton
                    android:id="@+id/img_btn_like2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="45dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_reserve2"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    android:src="@drawable/favorite4"/>
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:text="Completed Reservations"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price" />

                <TextView
                    android:id="@+id/tv_owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fares Saleem"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                    app:layout_constraintEnd_toEndOf="@+id/textView14"
                    app:layout_constraintStart_toStartOf="@+id/textView14"
                    app:layout_constraintTop_toTopOf="@+id/tv_price" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintEnd_toStartOf="@+id/textView17"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toTopOf="@+id/textView4" />

                <TextView
                    android:id="@+id/tv_owner_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0594022616"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_owner_name"
                    app:layout_constraintEnd_toEndOf="@+id/textView17"
                    app:layout_constraintStart_toStartOf="@+id/textView17"
                    app:layout_constraintTop_toTopOf="@+id/tv_owner_name" />

                <TextView
                    android:id="@+id/tv_completed_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/done"
                    android:drawablePadding="15dp"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="@+id/tv_owner_phone"
                    app:layout_constraintStart_toStartOf="@+id/tv_owner_phone"
                    app:layout_constraintTop_toTopOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="Owner Phone No."
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView14" />

                <ImageButton
                    android:id="@+id/btnimg_more4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_btn_swim2"
                    app:layout_constraintStart_toEndOf="@+id/img_btn_swim2"
                    app:layout_constraintTop_toTopOf="@+id/img_btn_swim2"
                    android:src="@drawable/more"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="More"
                    app:layout_constraintEnd_toEndOf="@+id/btnimg_more4"
                    app:layout_constraintStart_toStartOf="@+id/btnimg_more4"
                    app:layout_constraintTop_toBottomOf="@+id/btnimg_more4" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:text="Work Day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/tv_dayWork4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satarday"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    app:layout_constraintEnd_toEndOf="@+id/tv_completed_reservation"
                    app:layout_constraintStart_toStartOf="@+id/tv_completed_reservation"
                    app:layout_constraintTop_toTopOf="@+id/textView3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.27" />
                <!--    </androidx.cardview.widget.CardView>-->

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>