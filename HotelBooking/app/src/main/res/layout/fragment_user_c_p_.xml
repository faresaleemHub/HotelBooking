<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClientSide.UserDashboard.UserCP_Fragment">

    <TextView
        android:id="@+id/tv_personalInformation"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        android:background="#47ADFF"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Personla"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_interactivInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserImgControlPanel" />

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/UserImgControlPanel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/person2"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="75dp" />
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

    <TextView
        android:id="@+id/tv_interactivInformation"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:background="#000"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="interactive"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_personalInformation"
        app:layout_constraintTop_toBottomOf="@+id/UserImgControlPanel" />

    <androidx.cardview.widget.CardView
        android:id="@+id/FragmentContainer"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_personalInformation"
        app:layout_constraintVertical_bias="0.161"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>