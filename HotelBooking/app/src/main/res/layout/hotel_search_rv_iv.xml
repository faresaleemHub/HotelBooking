<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android=
        "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHotel5"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel1" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="120dp">

            <TextView
                android:id="@+id/tvHotelName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="15dp"
                android:text="H_Name"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tvHotelPrice_Period5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHotelName5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/mony"
                android:text="pricePeriod"
                android:textColor="#0D32FF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLocation5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHotelPrice_Period5"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/location"
                android:text="location"
                android:textSize="15sp"  />

            <ImageButton
                android:id="@+id/btnimg_like5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tvHotelName5"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/favorite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Reserve5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnimg_like5"
                android:layout_alignEnd="@id/tvHotelPrice_Period5"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="22dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:visibility="visible"
                app:cornerRadius="15dp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>